@model IEnumerable<ShopManage.Models.User>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<section>
    <div>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.ImagePath)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => user.UserId)
                    </td>
                    <td>
                        <img src="@user.ImagePath" width="40" height="40" />
                    </td>
                    <td>
                        @Html.DisplayFor(m => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => user.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(m => user.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => user.IsActive)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-primary" onclick="return confirm('Are you sure you want to Edit?')">Edit</a>
                        <a asp-action="Delete" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this User?')">Delete</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        <table class="table text-center table-active">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.Label("Product Id")
                                    </th>
                                    <th>
                                        @Html.Label("Product Name")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in user.Details)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => p.ProductId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => p.ProductName)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
