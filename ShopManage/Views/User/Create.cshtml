@model ShopManage.Models.Vm.Vmodel
@{
    ViewData["Title"] = "Create";
}
<h2>Create User</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>User Name</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>IsActive</label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label>Image Path</label>
        <input asp-for="ImagePath" type="file" class="form-control" />
    </div>

    <div>
        <div id="con">
            <!-- Dynamic dropdowns will be appended here -->
        </div>
        <div>
            <a href="#" id="addmore" class="btn btn-secondary">Add More Products</a>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

